@using Microsoft.AspNet.Identity
@if (AsistenteMatricula.Portal.Security.SecurityLocal.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li><a href="#" class="navbar-brand a-navbar"  >Hola @AsistenteMatricula.Portal.Security.SecurityLocal.Usuario.Nombre!</a></li> 
        <li><a href="javascript:document.getElementById('logoutForm').submit()" class="navbar-brand a-navbar"  >Cerrar sesión</a></li>
    </ul>
    }
} 
